{% extends 'base.html.twig' %}

{% block title %}Imagen{% endblock %}

{% block body %}
    <h1>Imagen</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ imagen.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ imagen.nombre }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ imagen.descripcion }}</td>
            </tr>
            <tr>
                <th>Foto</th>
                <td>
                    <img src="{{ rutaImagen }}{{ imagen.foto }}">
                </td>
            </tr>
            <tr>
                <th>Idusuario</th>
                <td>{{ imagen.idusuario }}</td>
            </tr>
            <tr>
                <th>CreadoEl</th>
                <td>{{ imagen.creadoEl ? imagen.creadoEl|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('imagen_index') }}">back to list</a>

    <a href="{{ path('imagen_edit', {'id': imagen.id}) }}">edit</a>

    {{ include('imagen/_delete_form.html.twig') }}
{% endblock %}
