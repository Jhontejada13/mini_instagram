{% extends 'base.html.twig' %}

{% block title %}Persona index{% endblock %}

{% block body %}
    <h1>Persona index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Apodo</th>
                <th>Avatar</th>
                <th>Email</th>
                <th>Clave</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for persona in personas %}
            <tr>
                <td>{{ persona.id }}</td>
                <td>{{ persona.nombre }}</td>
                <td>{{ persona.apellido }}</td>
                <td>{{ persona.apodo }}</td>
                <td>{{ persona.avatar }}</td>
                <td>{{ persona.email }}</td>
                <td>{{ persona.clave }}</td>
                <td>
                    <a href="{{ path('persona_show', {'id': persona.id}) }}">show</a>
                    <a href="{{ path('persona_edit', {'id': persona.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('persona_new') }}">Create new</a>
{% endblock %}
